{
  "name": "bildge-main",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "repository": {},
  "scripts": {
    "start": "node server",
    "test": "mocha tests --recursive --reporter spec",
    "clean": "rimraf public",
    "build": "npm run clean && bundle exec jekyll build --verbose && gulp",
    "dev": "npm run clean && (bundle exec jekyll build --drafts --verbose --watch --incremental & NODE_ENV=development gulp --watch & browser-sync start --server=public --files=public/**/*.{html,js,css,jpg,jpeg,gif,png,svg,ogv,mp4} --no-open --no-notify --logLevel=info --port=${PORT:-3000})",
    "prod": "set NODE_ENV=production && npm run build && npm start",
    "postinstall" : "npm run build"
  },
  "engines": {
    "node": "5.6.0",
    "npm": "3.7.2"
  },
  "dependencies": {
    "compression": "^1.6.1",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "simple-line-icons": "^2.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.11.1",
    "gulp": "^3.9.1",
    "gulp-postcss": "^6.1.0",
    "gulp-replace": "^0.5.4",
    "gulp-rev": "^7.0.0",
    "gulp-sass": "^2.2.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.5.0",
    "gulp-util": "^3.0.7",
    "imports-loader": "^0.6.5",
    "lodash": "^4.6.1",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "run-sequence": "^1.1.5",
    "supertest": "^1.2.0",
    "webpack": "^1.12.14",
    "font-awesome": "^4.6.3"
  }
}
